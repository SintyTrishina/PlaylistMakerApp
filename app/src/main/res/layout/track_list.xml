<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemView"
    style="@style/ModeSettingsScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artworkImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        android:layout_marginLeft="13dp"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="28dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:maxLines="1"
        android:textColor="@color/colorTrackName"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:fontFamily="@font/ys_display_regular" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artistName"
            style="@style/TrackStyle"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            app:drawableRightCompat="@drawable/dot"
            app:drawableTint="@color/dotTint" />

        <TextView
            android:id="@+id/trackTime"
            style="@style/TrackStyle" />

    </LinearLayout>


    <ImageView
        style="@style/ImageStyle"
        android:src="@drawable/agreement" />


</FrameLayout>