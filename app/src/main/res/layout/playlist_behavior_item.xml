<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/behavior_item"
    style="@style/ModeSettingsScreen"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/iconPadding"
        android:layout_marginStart="13dp"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/behavior_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="28dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:maxLines="1"
        android:textColor="@color/colorTrackName"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:fontFamily="@font/ys_display_regular"
        tools:text="jsjsjsfdfdfddfdfdffdd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/tracksCount"
            style="@style/TrackStyle"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            tools:text="slsllslsls" />


    </LinearLayout>
</FrameLayout>