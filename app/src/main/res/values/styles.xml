<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customHint">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0.4</item>
    </style>

    <style name="editTextHint">
        <item name="android:textColor">@color/placeholderColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLength">20</item>
    </style>


    <style name="MenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/color_menu</item>
        <item name="itemTextColor">@color/color_menu</item>
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
        <item name="backgroundTint">@color/backgroundSettingsScreen</item>
    </style>

    <style name="ActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="ModeFirstScreen">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="ModeSettingsScreen">
        <item name="android:background">@color/white</item>
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TrackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TopText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">@dimen/tabText</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ArrowBack">
        <item name="tint">@color/black</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/textPadding</item>
        <item name="android:layout_marginBottom">@dimen/textPadding</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="tint">@color/gray</item>

    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>

    </style>

</resources>
